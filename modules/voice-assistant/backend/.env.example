# App Configuration
APP_NAME=VoiceAssistant
HOST=0.0.0.0
PORT=8001

# CORS (JSON array format required by pydantic-settings)
CORS_ALLOW_ORIGINS=["http://localhost:3000","http://localhost:8001"]

# Audio limits (bytes)
MAX_AUDIO_BYTES=10485760

# Whisper Configuration (faster-whisper)
WHISPER_MODEL=base
WHISPER_DEVICE=cuda
WHISPER_COMPUTE_TYPE=float16
# Options: tiny, base, small, medium, large-v2, large-v3
# Larger models = better accuracy, slower processing

# LLM Configuration (if using Ollama)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama2

# LLM routing
LLM_ROUTE=ollama
ALENA_CONTROLLER_URL=http://localhost:9000
ALENA_CONTROLLER_TIMEOUT=120

# Logging
LOG_LEVEL=INFO
